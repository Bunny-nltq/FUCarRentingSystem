<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fucar.gui.controller.LoginController"
      stylesheets="@../css/style.css">

    <Label text="Login" />

    <TextField fx:id="txtEmail" promptText="Email" />
    <PasswordField fx:id="txtPassword" promptText="Password" />

    <Button fx:id="btnLogin" text="Login" onAction="#handleLogin" />
    <Button fx:id="btnGoRegister" text="Go to Register" onAction="#goRegister" />

</VBox>
