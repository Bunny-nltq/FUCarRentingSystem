<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="TOP_CENTER" spacing="10"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fucar.gui.controller.CarManagementController"
      stylesheets="@../css/style.css">

    <Label text="Car Management" />

    <TableView fx:id="carTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn text="ID" prefWidth="50" />
            <TableColumn text="Name" prefWidth="150" />
            <TableColumn text="Model Year" prefWidth="100" />
            <TableColumn text="Color" prefWidth="100" />
            <TableColumn text="Capacity" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAddCar" text="Add Car" />
        <Button fx:id="btnEditCar" text="Edit Car" />
        <Button fx:id="btnDeleteCar" text="Delete Car" />
    </HBox>

</VBox>
