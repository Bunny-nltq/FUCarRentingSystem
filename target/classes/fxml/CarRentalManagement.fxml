<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="TOP_CENTER" spacing="10"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fucar.gui.controller.CarRentalManagementController"
      stylesheets="@../css/style.css">

    <Label text="Car Rental Management" />

    <TableView fx:id="rentalTable" prefWidth="700" prefHeight="300">
        <columns>
            <TableColumn text="Rental ID" prefWidth="70"/>
            <TableColumn text="Customer" prefWidth="150"/>
            <TableColumn text="Car" prefWidth="150"/>
            <TableColumn text="Start Date" prefWidth="100"/>
            <TableColumn text="End Date" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAddRental" text="Add Rental" />
        <Button fx:id="btnEditRental" text="Edit Rental" />
        <Button fx:id="btnDeleteRental" text="Delete Rental" />
    </HBox>

</VBox>
