<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fucar.gui.controller.ProfileController"
      alignment="CENTER" spacing="12">

    <Label text="My Profile" style="-fx-font-size: 20px; -fx-font-weight: bold"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Mobile:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Address / Identity Card:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAddress" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Birthday:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtBirthday" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Licence Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtLicenceNumber" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Licence Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtLicenceDate" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="6" GridPane.columnIndex="1" editable="false"/>
    </GridPane>

    <Button fx:id="btnSave" text="Save Changes" style="-fx-padding: 8 20"/>

</VBox>
