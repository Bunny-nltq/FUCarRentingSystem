<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="TOP_CENTER" spacing="10"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fucar.gui.controller.ReviewController"
      stylesheets="@../css/style.css">

    <Label text="Reviews" />

    <TableView fx:id="reviewTable" prefWidth="700" prefHeight="300">
        <columns>
            <TableColumn text="ID" prefWidth="50"/>
            <TableColumn text="Customer" prefWidth="150"/>
            <TableColumn text="Car" prefWidth="150"/>
            <TableColumn text="Rating" prefWidth="100"/>
            <TableColumn text="Comment" prefWidth="250"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAddReview" text="Add Review" />
        <Button fx:id="btnEditReview" text="Edit Review" />
        <Button fx:id="btnDeleteReview" text="Delete Review" />
    </HBox>

</VBox>
